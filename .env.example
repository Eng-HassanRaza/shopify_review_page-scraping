# API Keys for Store URL Finder
# Copy this file to .env and add your actual API keys

# Perplexity API Key (required)
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# Perplexity URL finding settings (optional)
PERPLEXITY_MODEL=sonar-pro
PERPLEXITY_TIMEOUT=20
PERPLEXITY_TOP_N=5
PERPLEXITY_AUTOSAVE_THRESHOLD=0.7
PERPLEXITY_CACHE_TTL_SECONDS=86400

# OpenAI API Key (optional - for GPT analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Custom Search (CSE) for URL finding
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_CX=
GOOGLE_CSE_TIMEOUT=15

# Gemini (Google GenAI) for URL finding
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TIMEOUT=20
GEMINI_TOP_N=5
GEMINI_AUTOSAVE_THRESHOLD=0.7
GEMINI_CACHE_TTL_SECONDS=86400
GEMINI_MAX_RETRIES=3
GEMINI_RETRY_DELAY=1.0
GEMINI_VERIFY_SHOPIFY=true

# URL finder provider (cse or extension)
URL_FINDER_PROVIDER=cse

# Background worker settings (for server deployment)
WORKER_ENABLED=false
WORKER_SLEEP_SECONDS=5
WORKER_BATCH_SIZE=10
WORKER_MAX_RETRIES=3
PROVIDER_PRIORITY=gemini,perplexity,cse
AUTO_SAVE_THRESHOLD=0.7
LOW_CONFIDENCE_THRESHOLD=0.5

# URL validation settings
URL_VALIDATION_ENABLED=true
URL_VALIDATION_TIMEOUT=10
URL_VALIDATION_FOLLOW_REDIRECTS=true

# Email scraping retry settings
EMAIL_SCRAPING_DNS_ERROR_THRESHOLD=5
EMAIL_SCRAPING_FAILED_COOLDOWN_MINUTES=60
EMAIL_SCRAPING_MAX_RETRIES=3
